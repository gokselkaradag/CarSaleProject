@model IEnumerable<CarDTO>

@{
    ViewData["Title"] = "Araba Listesi";
}

<h2 class="my-4">Araba Listesi</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Fiyat</th>
            <th>İlan Tarihi</th>
            <th>İlan Numarası</th>
            <th>Marka</th>
            <th>Seri</th>
            <th>Model</th>
            <th>Resim</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Price</td>
                <td>@car.ListingDate.ToShortDateString()</td>
                <td>@car.ListingNumber</td>
                <td>@car.Brand</td> 
                <td>@car.Series</td>
                <td>@car.Model</td>
                <td><img src="@car.FilePath" alt="Car Image" width="100" /></td>
                <td>
                    <a href="/CarSale/UpdateCar?listingNumber=@car.ListingNumber" class="btn btn-primary">Güncelle</a>
                    <a href="/CarSale/DeleteCar?listingNumber=@car.ListingNumber" class="btn btn-primary">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>