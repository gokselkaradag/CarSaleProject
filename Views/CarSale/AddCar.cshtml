@model CarDTO

@{
    ViewData["Title"] = "Araba Ekle";

}

<h2 class="my-4">Araba Ekle</h2>

<form asp-action="AddCar" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Fiyat</label>
        <input type="number" class="form-control" asp-for="Price" />
    </div>
    <div class="form-group">
        <label>İlan Tarihi</label>
        <input type="date" class="form-control" asp-for="ListingDate" />
    </div>
    <div class="form-group">
        <label>İlan Numarası</label>
        <input type="number" class="form-control" asp-for="ListingNumber" />
    </div>
    <div class="form-group">
        <label>Marka</label>
        <input type="text" class="form-control" asp-for="Brand" />
    </div>
    <div class="form-group">
        <label>Seri</label>
        <input type="text" class="form-control" asp-for="Series" />
    </div>
    <div class="form-group">
        <label>Model</label>
        <input type="text" class="form-control" asp-for="Model" />
    </div>
    <div class="form-group">
        <label>KM</label>
        <input type="number" class="form-control" asp-for="Kilometers" />
    </div>
    <div class="form-group">
        <label>Kategori</label>
        @if(Model.Categories != null)
        {
            <select class="form-control" asp-for="CategoryId">
                <option value="">Seçiniz</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.ListingNumber">@category.Name</option>
                }
            </select>
        }
    </div>
    <div class="form-group">
        <label>Dosya Seç:</label>
        <input type="file" id="file" asp-for="File" />
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}