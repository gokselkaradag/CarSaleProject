@model CarDTO

@{
    ViewData["Title"] = "Araba Güncelle";
}

<h2 class="my-4">Araba Güncelle</h2>

<form asp-action="UpdateCar" method="post">
    <div class="form-group">
        <label>Fiyat</label>
        <input type="number" class="form-control" asp-for="Price" />
    </div>
    <div class="form-group">
        <label>İlan Tarihi</label>
        <input type="date" class="form-control" asp-for="ListingDate" />
    </div>
    <div class="form-group">
        <label>İlan Numarası</label>
        <input type="number" class="form-control" asp-for="ListingNumber" />
    </div>
    <div class="form-group">
        <label>Marka</label>
        <input type="text" class="form-control" asp-for="Brand" />
    </div>
    <div class="form-group">
        <label>Seri</label>
        <input type="text" class="form-control" asp-for="Series" />
    </div>
    <div class="form-group">
        <label>Model</label>
        <input type="text" class="form-control" asp-for="Model" />
    </div>


    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>